<ContentDialog
	x:Class="xKorean.ExtraFilterDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:xKorean"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="추가 필터 설정"
	PrimaryButtonText="적용"
	SecondaryButtonText="취소"
	PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
	SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

	<Grid>
		<StackPanel>
			<CheckBox x:Name="UsePlayAnywhere" Content="플레이 애니웨어 필터 추가"/>
			<CheckBox x:Name="UseDolbyAtmos" Content="돌비 애트모스 필터 추가"/>
			<CheckBox x:Name="UseKeyboardMouse" Content="키보드/마우스 지원 필터 추가"/>
			<CheckBox x:Name="UseLocalCoopCheckBox" Content="로컬 협동"/>
			<CheckBox x:Name="UseOnlineCoopCheckBox" Content="온라인 협동"/>
			<CheckBox x:Name="UseFPS120CheckBox" Content="최대 120프레임"/>
			<CheckBox x:Name="UseFPSBoostCheckBox" Content="프레임 부스트"/>
		</StackPanel>
	</Grid>
</ContentDialog>
